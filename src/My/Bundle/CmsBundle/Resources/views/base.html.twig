{% use 'VinceCmsBundle::metas.html.twig' %}

<!DOCTYPE html>
<html xmlns:fb="https://www.facebook.com/2008/fbml">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ article.meta('title') }}{% endblock %}</title>
        {% block metas %}
            {% for meta in article.metas %}
                {{ block('meta') }}
            {% endfor %}
        {% endblock %}
        {% block stylesheets %}{% endblock %}
        <link rel="sitemap" type="application/xml" title="{{ 'Sitemap'|trans }}" href="{{ path('cms_sitemap') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.1.min.js"></script>
            <script type="text/javascript" src="http://jquery-ui.googlecode.com/svn/tags/latest/ui/minified/jquery-ui.min.js"></script>
        {% endblock %}
    </body>
</html>