{% extends 'VinceCmsBundle::base.html.twig' %}

{% block body %}
    <a href="{{ path('cms_realisations') }}" title="Retour à la liste des réalisations" class="back">&lBarr; Retour à la liste des réalisations</a>
    <div id="fb-root"></div>
    <h1>{{ block('title') }}</h1>

    <div class="infos">
        <a href="{{ article.content('url') }}" target="_blank">{{ article.content('url') }}</a>
        {% if article.tags|length %}
            - Tags :
            {% for i, tag in article.tags %}
                <a href="{{ path('cms_search', {'query': tag}) }}" title="{{ tag }}" class="tag">{{ tag }}</a>{% if i < article.tags|length-1 %}, {% endif %}
            {% endfor %}
        {% endif %}
    </div>

    <div class="thumbnail">
        <img src="{{ article.content('thumbnail') }}" alt="{{ article.title }}" title="{{ article.title }}" />
    </div>

    <a href="{{ article.content('url') }}" class="website" target="_blank">{{ article.content('url') }}</a>
    <div class="contents">{{ article.content('description')|raw }}</div>

    <div class="social">
        <fb:like send="true" layout="button_count" show_faces="false"></fb:like>
        <a href="https://twitter.com/share" class="twitter-share-button" data-lang="fr">Tweeter</a>
        <script type="IN/Share" data-counter="right"></script>
        <div class="viadeo-share-button">
            <div class="viadeo-share" data-display="btnlight" data-count="right" data-partner-id="uouDroVovEigEflIwbAOxVgjto"></div>
        </div>
        <g:plusone></g:plusone>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/myblog/js/snippet/jquery.snippet.css') }}" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/myblog/js/snippet/snippet.css') }}" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/myblog/js/totop/ui.totop.css') }}" media="screen" />
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="//platform.linkedin.com/in.js"></script>
    <script type="text/javascript" src="http://connect.facebook.net/fr_FR/all.js#xfbml=1"></script>
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
    <script type="text/javascript" src="http://widgets.viadeo.com/js/viadeowidgets.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/myblog/js/totop/jquery.easing.1.3.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/myblog/js/totop/jquery.ui.totop.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/myblog/js/snippet/sh_sh.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/myblog/js/snippet/sh_log.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/myblog/js/snippet.js') }}"></script>
{% endblock %}