{% extends admin.getTemplate('base_show_field') %}

{% block field %}
    {% spaceless %}
        {%- if value is empty -%}
            &nbsp;
        {%- elseif field_description.options.format is defined -%}
            {{ value|localizeddate(field_description.options.format, 'none') }}
        {%- else -%}
            {{ value|localizeddate('full', 'none') }}
        {%- endif -%}
    {% endspaceless %}
{% endblock %}