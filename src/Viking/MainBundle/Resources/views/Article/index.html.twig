{% extends "VikingMainBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Home{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-12">
            liste des articles :
            {% for article in articles %}
                <div class="article">
                    <p>{{ article.name }}</p>
                    <p>{{ article.content }}</p>
                    <p>{{ article.date|date('d,m,Y') }}</p>
                    <p>{{ article.author }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
